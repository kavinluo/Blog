extends layout

block content
  form(class="form-horizontal",method="post")
    fieldset
      legend 用户注册
      div(class="form-group")
        label(class="control-label",for="username") Email address
        div(class="controls")
          input(type="text",class="form-control",id="username",name="username")
          p(class="help-block") We'll never share your email with anyone else.

      div(class="form-group")
        label(class="control-label",for="password") Password
        div(class="controls")
          input(type="password",class="form-control",id="password",name="password")

      div(class="form-group")
        label(class="control-label",for="password-repeat") Repeat password
        div(class="controls")
          input(type="password",class="form-control",id="password-repeat",name="password-repeat")
      div(style={'text-align':'center'})
        button(type="submit",class="btn btn-primary") Submit
